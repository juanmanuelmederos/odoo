<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="DashboardAuthToken">
        <div class="text-center o_web_settings_dashboard_assistance mt8">
            <i class="fa fa-life-ring fa-4x text-muted"></i>
            <div class="o_web_settings_dashboard_header">
                Remote Assistance
            </div>
            <div>
                <small class="text-muted text-center o_web_settings_dashboard_compact_subtitle">
                    Get remote help by inviting a third party to connect as a user for a limited amount of time, without the need to share credentials.
                </small>
            </div>
            <div class="mt16">
                <a class="btn btn-primary btn-block o_get_assistance"><strong>Get Assistance</strong></a>
            </div>
        </div>
    </t>
    
    <t t-extend="DashboardMain">
        <t t-jquery="div.o_web_settings_dashboard_invitations" t-operation="after">
            <div class="text-center o_web_settings_dashboard_auth_token"/>
        </t>
    </t>

    <t t-name="auth_token.wizard">
        <div class="o_form_view">                
            <div class="oe_form_sheet oe_form_sheet_width o_form_sheet">
                <p>Temporary credentials have been created for the user <t t-esc="widget.user.name"/> (<t t-esc="widget.user.login"/>).</p>
                <p>These credentials will be valid until <strong t-esc="widget.limit_validity"/>.</p>
                <p t-if="widget.email_success">An invitation has been sent to <t t-esc="widget.recipients"/> by email.</p>
                <p t-if="widget.recipients &amp;&amp; !widget.email_success" class="text-danger">No invitation e-mail could be sent to <t t-esc="widget.recipients"/>; if the Remote Assistance e-mail template was deleted, you may reinstall the module to solve the issue.</p>
                
                <p>You can send the following link manually:</p>
                <p class="alert alert-info">
                    <a t-att-href="widget.url"><t t-esc="widget.url"/></a>
                </p>
            </div>
        </div>
        <footer>
            <button class="btn btn-primary mr8 o_remote_close">Close</button>
        </footer>
    </t>

</templates>
