<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_acquirer_view_form_inherit_payment_paytm" model="ir.ui.view">
        <field name="name">payment.acquirer.view.form.inherit.payment.paytm</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'paytm')]}">
                    <field name="paytm_merchant_id"/>
                    <field name="paytm_merchant_key"/>
                    <field name="paytm_industry_type_id"/>
                    <field name="paytm_website"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="payment_transaction_view_form_inherit_payment_paytm" model="ir.ui.view">
        <field name="name">payment.transaction.view.form.inherit.payment.paytm</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.transaction_form"/>
        <field name="arch" type="xml">
            <field name="date_validate" position="after">
                <field name="provider" invisible="1"/>
                <field name="order_id"  attrs="{'invisible': [('provider', '!=', 'paytm')]}"/>
            </field>
        </field>
    </record>
</odoo>
