        <field name="description">GST 3% SE</field>
        <field name="type_tax_use">sale</field>
        <field name="amount">3</field>
        <field name="amount_type">percent</field>
        <field name="sequence">10</field>
        <field name="price_include" eval="0"/>
        <field name="account_id" ref="account_1003"/>
        <field name="refund_account_id" ref="account_1003"/>
        <field name="cn_tag_ids" eval="[(6,0,[ref('cn_tag_gst'),ref('cn_tag_gst_sale'),ref('cn_tag_gst_taxes_excluded')])]"/>
