<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.digest</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='msg_module_digest']" position="after">
                <div class="content-group" attrs="{'invisible': [('module_digest','=',False)]}">
                    <div class="mt16">
                        <button type="action" name="%(digest.digest_action)d" string="Configure Digest Emails" icon="fa-arrow-right" class="btn-link"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
