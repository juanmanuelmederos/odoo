<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_mrp_bom">
        <div class="container o_mrp_bom_report_page">
            <t t-if="data['components']">
                <div class="row">
                    <div class="col-md-12">
                        <h1>BoM Structure &amp; Cost</h1>
                        <h3>
                            <a t-att-data-res-id="data['product'].id" t-att-data-model="data['product']._name" class="o_mrp_bom_action">
                                <t t-esc="data['bom_prod_name']"/>
                            </a>
                            <span class="pull-right"><b>Quantity : </b><t t-esc="data['bom_qty']"/> <t t-esc="data['bom'].product_uom_id.name"/></span>
                        </h3>
                        <h6 t-if="data['bom'].code">Reference: <t t-esc="data['bom'].code"/></h6>
                    </div>
                </div>
                <t t-set="currency" t-value="data['currency']"/>
                <div class="row">
                    <div class="col-md-12">
                        <div class="mt16">
                            <h4><b>Components</b></h4>
                            <table width="100%" class="o_mrp_bom_expandable">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th groups="uom.group_uom">Unit of Measure</th>
                                        <th>Unit Cost</th>
                                        <th>Total Cost</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-call="mrp.report_mrp_bom_line"/>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td groups="uom.group_uom"></td>
                                        <td><span><strong>Total Cost of Components</strong></span></td>
                                        <td><span><t t-esc="data['total']" t-options='{"widget": "monetary", "display_currency": currency}'/></span></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <div t-if="data['operations']" groups="mrp.group_mrp_routings" class="row">
                    <div class="col-md-12">
                        <div class="mt16">
                            <h4><b>Operations</b></h4>
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <th>Operation</th>
                                        <th>Work Center</th>
                                        <th>Duration (Minutes)</th>
                                        <th>Cost per Hour</th>
                                        <th>Total Cost</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="o_mrp_bom_report_line" t-foreach="data['operations']" t-as="operation">
                                        <td>
                                            <span>
                                                <a t-att-data-res-id="operation['operation'].id" t-att-data-model="operation['operation']._name" class="o_mrp_bom_action">
                                                    <t t-esc="operation['name']"/>
                                                </a>
                                            </span>
                                        </td>
                                        <td>
                                            <span>
                                                <a t-att-data-res-id="operation['operation'].workcenter_id.id" t-att-data-model="operation['operation'].workcenter_id._name" class="o_mrp_bom_action">
                                                    <t t-esc="operation['operation'].workcenter_id.name"/>
                                                </a>
                                            </span>
                                        </td>
                                        <td>
                                            <span><t t-esc="operation['duration_expected']" t-options='{"widget": "float_time"}'/></span>
                                        </td>
                                        <td>
                                            <span><t t-esc="operation['operation'].workcenter_id.costs_hour" t-options="{'widget': 'monetary', 'display_currency': currency}"/></span>
                                        </td>
                                        <td>
                                            <span><t t-esc="operation['total']"/></span>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td><strong>Total Cost of Operations</strong></td>
                                        <td><strong><t t-esc="data['operations_total']"/></strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
            <t t-else="">
                <h1 class="text-center">No data available.</h1>
            </t>
        </div>
    </template>

    <template id="report_mrp_bom_line">
        <t t-set="currency" t-value="data['currency']"/>
        <t t-foreach="data['components']" t-as="l">
            <t t-set="space_td" t-value="'margin-left: '+ str(l['level'] * 20) + 'px;'"/>
            <tr class="o_mrp_bom_report_line" t-att-data-id="l['child_bom']" t-att-parent_id="l['parent_id']" t-att-data-line="l['line_id']" t-att-data-qty="l['prod_qty']" t-att-data-level="l['level']">
                <td>
                    <span t-att-style="space_td"/>
                    <t t-if="l['child_bom']">
                        <span class="o_mrp_bom_unfoldable fa fa-fw fa-caret-right"/>
                    </t>
                    <span t-att-class="None if l['child_bom'] else 'o_mrp_bom_no_fold'">
                        <a t-att-data-res-id="l['prod_id']" t-att-data-model="'product.product'" class="o_mrp_bom_action"><t t-esc="l['prod_name']"/></a>
                    </span>
                </td>
                <td><span><t t-esc="l['prod_qty']"/></span></td>
                <td groups="uom.group_uom"><span><t t-esc="l['prod_uom']"/></span></td>
                <td><span t-esc="l['prod_cost']" t-options='{"widget": "monetary", "display_currency": currency}'/></td>
                <td><span t-esc="l['total']" t-options='{"widget": "monetary", "display_currency": currency}'/></td>
            </tr>
        </t>
    </template>

    <template id="report_mrp_bom_pdf">
        <t t-raw="'&lt;base href=%s&gt;' % base_url"/>
        <t t-call="web.html_container">
            <t t-call-assets="mrp.assets_common" t-js="false"/>
            <t t-if="datas">
                <t t-foreach="datas" t-as="data">
                    <div class="container o_mrp_bom_report_page">
                        <div class="row">
                            <div class="col-md-12">
                                <h1>BoM Structure &amp; Cost</h1>
                                <h3>
                                    <t t-esc="data['header']['bom_prod_name']"/>
                                    <span class="pull-right"><b>Quantity : </b><t t-esc="data['header']['bom_qty']"/> <t t-esc="data['header']['bom'].product_uom_id.name"/></span>
                                </h3>
                                <h6 t-if="data['header']['bom'].code">Reference: <t t-esc="data['header']['bom'].code"/></h6>
                            </div>
                        </div>
                        <t t-set="currency" t-value="data['header']['currency']"/>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mt16">
                                    <h4><b>Components</b></h4>
                                    <table width="100%">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Quantity</th>
                                                <th groups="uom.group_uom">Unit of Measure</th>
                                                <th>Unit Cost</th>
                                                <th>Total Cost</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="range(0, len(data['body']))" t-as="l">
                                                <t t-set="row" t-value="data['body'][l]"/>
                                                <t t-set="space_td" t-value="'margin-left: '+ str(row['level'] * 30) + 'px;'"/>
                                                <tr class="o_mrp_bom_report_line">
                                                    <td>
                                                        <span t-att-style="space_td"/>
                                                        <t t-esc="row['prod_name']"/>
                                                    </td>
                                                    <td><t t-esc="row['prod_qty']"/></td>
                                                    <td groups="uom.group_uom"><t t-esc="row['prod_uom']"/></td>
                                                    <td><t t-esc="row['prod_cost']" t-options='{"widget": "monetary", "display_currency": currency}'/></td>
                                                    <td><t t-esc="row['total']" t-options='{"widget": "monetary", "display_currency": currency}'/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td groups="uom.group_uom"></td>
                                                <td><strong>Total Cost of Components</strong></td>
                                                <td><t t-esc="data['header']['total']" t-options='{"widget": "monetary", "display_currency": currency}'/></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div t-if="data['header']['operations']" groups="mrp.group_mrp_routings" class="row">
                            <div class="col-md-12">
                                <div class="mt16">
                                    <h4><b>Operations</b></h4>
                                    <table width="100%">
                                        <thead>
                                            <tr>
                                                <th>Operation</th>
                                                <th>Work Center</th>
                                                <th>Duration (Minutes)</th>
                                                <th>Cost per Hour</th>
                                                <th>Total Cost</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="o_mrp_bom_report_line" t-foreach="data['header']['operations']" t-as="operation">
                                                <td><t t-esc="operation['name']"/></td>
                                                <td><t t-esc="operation['operation'].workcenter_id.name"/></td>
                                                <td><t t-esc="operation['duration_expected']" t-options='{"widget": "float_time"}'/></td>
                                                <td><t t-esc="operation['operation'].workcenter_id.costs_hour" t-options="{'widget': 'monetary', 'display_currency': currency}"/></td>
                                                <td><t t-esc="operation['total']"/></td>
                                            </tr>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td><strong>Total Cost of Operations</strong></td>
                                                <td><strong><t t-esc="data['header']['operations_total']"/></strong></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p t-if="data_index &lt; data_size - 1" style="page-break-before:always;"/>
                </t>
            </t>
            <t t-else="">
                <h1 class="text-center">No data available.</h1>
            </t>
        </t>
    </template>
</odoo>
