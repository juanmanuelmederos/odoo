<odoo>
    <record id="account_invoice_refund_reason_tree" model="ir.ui.view">
        <field name="name">account.invoice.refund.reason.tree</field>
        <field name="model">account.invoice.refund.reason</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="CN/DN/Refund reason" editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="account_invoice_refund_reason_actions" model="ir.actions.act_window">
        <field name="name">CN/DN/Refund reason</field>
        <field name="res_model">account.invoice.refund.reason</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="account_invoice_refund_reason_tree"/>
    </record>

    <menuitem id="account_invoice_refund_reason_menu"
            name="CN/DN/Refund reason"
            parent="account.account_account_menu"
            action="account_invoice_refund_reason_actions"
            sequence="50"/>
</odoo>