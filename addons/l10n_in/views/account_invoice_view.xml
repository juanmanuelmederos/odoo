<odoo>
    <record id="account_invoice_l10n_in_form" model="ir.ui.view">
        <field name="name">account.invoice.l10n.in.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']//field[@name='name']" position="after">
                <field name="refund_reason_id" groups="base.group_user" attrs="{'invisible': [('type', 'not in', ('out_refund','in_refund'))], 'required' : [('type','in',('out_refund','in_refund'))]}" widget="selection"/>
                <field name="port_code_id"/>
                <field name="is_reverse_charge" groups="base.group_no_one"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="gst_invoice_type" groups="base.group_no_one"/>
                <field name="e_commerce_partner_id" groups="base.group_no_one" domain="[('is_e_commerce','=',True)]"/>
            </xpath>
        </field>
    </record>
</odoo>
