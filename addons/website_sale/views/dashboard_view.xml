<odoo>
    <data>
        <record model="ir.ui.view" id="sale_dashboard_view">
            <field name="name">Sale Dashboard View</field>
            <field name="model">sale.report</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <dashboard>
                    <group col="12">
                        <group string="At a glance" colspan="8">
                            <field name="price_total"/>
                            <field name="product_uom_qty"/>
                            <field name="qty_delivered"/>
                            <field name="qty_invoiced"/>
                            <field name="qty_to_invoice"/>
                        </group>
                        <group string="Average order" colspan="4">
                            <field name="categ_id"/>
                        </group>
                    </group>
                </dashboard>
            </field>
        </record>
        <record id="sale_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="res_model">sale.report</field>
            <field name="view_mode">dashboard</field>
        </record>
    </data>
</odoo>