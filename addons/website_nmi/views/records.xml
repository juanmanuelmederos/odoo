<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="draft_menu" model="website.menu">
            <field name="name">Draft</field>
            <field name="url">/page/draft</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">40</field>
        </record>

        <record id="draft_page" model="website.page">
            <field name="name">Draft</field>
            <field name="website_published">True</field>
            <field name="url">/page/draft</field>
            <field name="view_id" ref="draft"/>
        </record>

        <record id="snippets_menu" model="website.menu">
            <field name="name">Snippets</field>
            <field name="url">/page/snippets</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">20</field>
        </record>

        <record id="snippets_page" model="website.page">
            <field name="name">Snippets</field>
            <field name="website_published">True</field>
            <field name="url">/page/snippets</field>
            <field name="view_id" ref="snippets"/>
        </record>

    </data>
</odoo>